<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dfccdeae"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#59b362">
        <TextView
            android:id="@+id/donor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="SHONA SWEETS"
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:id="@+id/icon_contact"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/contact_icon"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="9971179912"
            android:textColor="#ffffff"
            android:layout_below="@id/donor"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact"
            android:layout_marginStart="48dp"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@+id/contact"
            android:text="ACCEPT"
            android:textSize="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/icon_info"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/info_icon"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:maxLines="3"
            android:text="Sambhal dhokla paneer "
            android:textSize="14dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/icon_info"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/location_icon"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/address"
            android:layout_centerVertical="true"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_info"
            android:maxLines="1"
            android:text="Bihar se hai"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:textColor="#000000"
            android:id="@+id/pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Up :"
            android:textSize="16dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_toRightOf="@+id/pick"
            android:id="@+id/date_info"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/time_icon"
            android:scaleType="centerCrop"
            android:layout_marginLeft="56dp"
            />
        <TextView
            android:id="@+id/pickupTime"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_toRightOf="@+id/date_info"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:text="5 se 12"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textColor="#000000"
            android:id="@+id/valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valid upto :"
            android:textSize="20dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_toRightOf="@+id/valid"
            android:id="@+id/date_info"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/date_icon"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/validDate"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_toRightOf="@+id/date_info"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:text="hello"/>
        <ImageView
            android:layout_toRightOf="@+id/valid"
            android:id="@+id/time_info"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/time_icon"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/date_info"
            />
        <TextView
            android:id="@+id/validTime"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_toRightOf="@+id/time_info"
            android:layout_below="@+id/date_info"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:text="5 se 12"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#cca8e6ac"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal">
        <ImageView

            android:id="@+id/accept_info"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/done_icon"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/button_text"
            android:layout_toRightOf="@id/accept_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="ACCEPT" />
    </RelativeLayout>




</LinearLayout>