<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context="gbpec.comida.RegistrationNGO">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            android:focusableInTouchMode="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/testing"/>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">
                >
                <EditText
                    android:id="@+id/ngo_name"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:hint="NGO Name"
                    />
            </android.support.design.widget.TextInputLayout>

            <!--Spinner for choosing type of business-->
            <Spinner
                android:id="@+id/ngo_type"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                ></Spinner>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">
                >
                <EditText
                    android:id="@+id/ngo_num1"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="Contact Number(1)*"
                    android:inputType="phone"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">
                >
                <EditText
                    android:id="@+id/ngo_num2"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="Contact Number(2)"
                    android:inputType="phone"

                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">
                >

                <EditText
                    android:id="@+id/ngo_address"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="Address"
                    android:inputType="text"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">
                >
                <EditText
                    android:id="@+id/ngo_email"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="Email Id"
                    android:inputType="textEmailAddress"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">
                >
                <EditText
                    android:id="@+id/ngo_head"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="Head Name"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:passwordToggleEnabled="true"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">
                >

                <EditText
                    android:id="@+id/ngo_password"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:passwordToggleEnabled="true"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">
                >
                <EditText
                    android:id="@+id/ngo_confirm"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">
                >
                <EditText
                    android:id="@+id/ngo_additional"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="Estimated People"
                    android:inputType="text"
                    />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/register"
                android:text="REGISTER"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="#32CD32"
                android:onClick="registerNgo"/>



        </LinearLayout>





    </ScrollView>

</RelativeLayout>
