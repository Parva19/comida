<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/setting_toolbar"
        android:background="#08981f">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/back_btn"
            android:layout_centerVertical="true"
            android:src="@drawable/back_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:text="Settings"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:padding="10dp"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/background3"
        android:layout_below="@+id/setting_toolbar"
        android:id="@+id/notification_lay"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/notification_icon"
            android:id="@+id/notification_icon"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/notification_icon"
            android:layout_margin="10dp"/>
        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:background="@drawable/toggle_selector"
            android:checked="true"
            android:text=""
            android:textOff=""
            android:textOn="" />


    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="27dp"
    android:layout_below="@+id/notification_lay"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Give Us Feedback"
        android:id="@+id/btn_feedback"
        android:textColor="#000"
        android:padding="20dp"
        android:textSize="15dp"
       />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#1EA133"
        android:layout_below="@+id/btn_feedback"/>
    <TextView
        android:layout_below="@+id/btn_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate Us"
        android:id="@+id/btn_Rate_us"
        android:textColor="#000"
        android:padding="20dp"
        android:textSize="15dp"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#1EA133"
        android:layout_below="@+id/btn_Rate_us"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share the App"
        android:layout_below="@+id/btn_Rate_us"
        android:id="@+id/btn_share_app"
        android:textColor="#000"
        android:padding="20dp"
        android:textSize="15dp"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#1EA133"
        android:layout_below="@+id/btn_share_app"/>


</RelativeLayout>

</RelativeLayout>